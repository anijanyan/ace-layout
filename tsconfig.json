{
  "compilerOptions": {
    "outDir": "./built",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true
  },
  "include": [
    "./packages/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
